@page "/CustomerList"
@inject NavigationManager _nav
<h3>العملاء</h3>
<button @onclick="GoToNewPage" class="btn btn-primary" style="width:90%;">اضافة زبون جديد</button>
<table class="table">
    <tr>
        <th>الاسم</th>
        <th>العمر</th>
        <th></th>
    </tr>
    @foreach (var item in this.customr)
   {
        <tr>
            <td>@item.name</td>
            <td>@item.Age</td>
            <td>
                <button @onclick="()=> GoToDetailsPage(item.id)">التفاصيل</button>
                <button @onclick="()=> GoToUpdatePage(item.id)">تعديل</button>
                <button @onclick="()=> GoToDeletePage(item.id)">حذف</button>
            </td>
        </tr>
   }
</table>

@code {
    public List<Tools.Model.Customr> customr { get; set; } = new();
    protected override async Task OnInitializedAsync()
    {
        var client = new HttpClient();
        var response = await client.GetAsync("https://localhost:7110/customrs");
        customr = await response.Content.ReadAsAsync<List<Tools.Model.Customr>>();
    }
    void GoToNewPage()
    {
        _nav.NavigateTo("newcustomer");
    }
    void GoToDetailsPage(int id)
    {
        _nav.NavigateTo("CustomerDetails/" + id);
    }
    void GoToDeletePage(int id)
    {
        _nav.NavigateTo("DeleteCustomer/" + id);
        
        
    }
    void GoToUpdatePage(int id)
    {
        _nav.NavigateTo("UpdateCustomer/" + id);
    }
}