@page "/UpdateFollowing/{Id}"
@inject NavigationManager _nav
<h3>تعديل بيانات العميل</h3>
<label> الاسم:</label>
<input type="text" @bind-value="this.Followings.name"/>
<label>العمر:</label>
<input type="number" @bind-value="this.Followings.Age"/>
<button @onclick="Submit">حفظ</button>
<button @onclick="this.Back">إلغاء</button>

@code {
    public Tools.Model.Following Followings { get; set; } = new();
    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var client = new HttpClient();
        var response = await client.GetAsync("https://localhost:7110/Followings/" + Id);
        if(response.StatusCode == System.Net.HttpStatusCode.OK)
        {
            this.Followings = await response.Content.ReadAsAsync<Tools.Model.Following>();
        }
    }

    async Task Submit()
    {
        var client = new HttpClient();
        var response = await client.PutAsJsonAsync("https://localhost:7110/Followings/" + Id, Followings);
        if(response.StatusCode == System.Net.HttpStatusCode.NoContent)
        {
            _nav.NavigateTo("Followings");
        }
    }
        void Back()
    {
        _nav.NavigateTo("Followings");
    }

}