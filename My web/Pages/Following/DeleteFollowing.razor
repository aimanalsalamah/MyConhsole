@page "/DeleteFollowing/{Id}"
@inject NavigationManager _nav
<h3>Delte Frinde  </h3>
@if(this.Followings != null)
{
    <label>Name: @Followings.name</label>
    <br/>
    <label>Number phone: @Followings.Age</label>
}
<p>Are you sure you need delete your frinde?</p>
<button @onclick="this.Delete">Delete</button>
<button @onclick="this.Back">Cansel</button>

@code {
    public Tools.Model.Following Followings { get; set; }
    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var client = new HttpClient();
        var response = await client.GetAsync("https://localhost:7110/Followings/" + Id);
        if(response.StatusCode == System.Net.HttpStatusCode.OK)
        {
            this.Followings = await response.Content.ReadAsAsync<Tools.Model.Following>();
        }
    }
    async Task Delete()
    {
        var client = new HttpClient();
        var response = await client.DeleteAsync("https://localhost:7110/Followings/" + Id);
        if(response.StatusCode == System.Net.HttpStatusCode.NoContent)
        {
            _nav.NavigateTo("Followings");
        }
    }
    void Back()
    {
        _nav.NavigateTo("Followings");
    }

}
