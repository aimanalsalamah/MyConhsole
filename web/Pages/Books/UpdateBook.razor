@page "/UpdateBook/{Id}"
@inject NavigationManager _nav
<h3>تعديل بيانات العميل</h3>
<label> الاسم:</label>
<input type="text" @bind-value="this.Book.name"/>
<label>العمر:</label>
<input type="number" @bind-value="this.Book.Age"/>
<button @onclick="Submit">حفظ</button>
<button @onclick="this.Back">إلغاء</button>

@code {
    public Tools.Model.Books Book { get; set; } = new();
    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var client = new HttpClient();
        var response = await client.GetAsync("https://localhost:2030/Books/" + Id);
        if(response.StatusCode == System.Net.HttpStatusCode.OK)
        {
            this.Book = await response.Content.ReadAsAsync<Tools.Model.Books>();
        }
    }

    async Task Submit()
    {
        var client = new HttpClient();
        var response = await client.PutAsJsonAsync("https://localhost:2030/Books/" + Id, Book);
        if(response.StatusCode == System.Net.HttpStatusCode.NoContent)
        {
            _nav.NavigateTo("Books");
        }
    }
        void Back()
    {
        _nav.NavigateTo("Books");
    }

}