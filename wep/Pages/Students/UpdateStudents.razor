@page "/UpdateStudents/{Id}"
@inject NavigationManager _nav
<h3>تعديل بيانات العميل</h3>
<label> الاسم:</label>
<input type="text" @bind-value="this.Students.Name"/>
<label>العمر:</label>
<input type="number" @bind-value="this.Students.Age"/>
<button @onclick="Submit">حفظ</button>
<button @onclick="this.Back">إلغاء</button>

@code {
    public Tools.Models.Students Students { get; set; } = new();
    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var client = new HttpClient();
        var response = await client.GetAsync("https://localhost:7110/Students/" + Id);
        if(response.StatusCode == System.Net.HttpStatusCode.OK)
        {
            this.Students = await response.Content.ReadAsAsync<Tools.Models.Students>();
        }
    }

    async Task Submit()
    {
        var client = new HttpClient();
        var response = await client.PutAsJsonAsync("https://localhost:7110/Students/" + Id, Students);
        if(response.StatusCode == System.Net.HttpStatusCode.NoContent)
        {
            _nav.NavigateTo("Students");
        }
    }
        void Back()
    {
        _nav.NavigateTo("Students");
    }

}