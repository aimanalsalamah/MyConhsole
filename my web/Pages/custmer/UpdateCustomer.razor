@page "/UpdateCustomer/{Id}"
@inject NavigationManager _nav
<h3>تعديل بيانات العميل</h3>
<label> الاسم:</label>
<input type="text" @bind-value="this.Yaseere.name"/>
<label>العمر:</label>
<input type="number" @bind-value="this.Yaseere.age"/>
<button @onclick="Submit">حفظ</button>
<button @onclick="this.Back">إلغاء</button>

@code {
    public Tools.models.Yaseer Yaseere { get; set; } = new();
    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var client = new HttpClient();
        var response = await client.GetAsync("https://localhost:7172/Yaseer/" + Id);
        if(response.StatusCode == System.Net.HttpStatusCode.OK)
        {
            this.Yaseere = await response.Content.ReadAsAsync<Tools.models.Yaseer>();
        }
    }

    async Task Submit()
    {
        var client = new HttpClient();
        var response = await client.PutAsJsonAsync("https://localhost:7172/Yaseer/" + Id, Yaseere);
        if(response.StatusCode == System.Net.HttpStatusCode.NoContent)
        {
            _nav.NavigateTo("Yaseer");
        }
    }
        void Back()
    {
        _nav.NavigateTo("Yaseer");
    }

}