@page "/Yaseer"

@inject NavigationManager _nav
<h3>العملاء</h3>
<button @onclick="GoToNewPage">اضافة زبون جديد</button>
<table class="table">
    <tr>
        <th>الاسم</th>
        <th>العمر</th>
        <th></th>
    </tr>
    @foreach (var item in this.Yaseere)
   {
        <tr>
            <td>@item.name</td>
            <td>@item.age</td>
            <td>
                <button @onclick="()=> GoToDetailsPage(item.id)">التفاصيل</button>
                <button @onclick="()=> GoToUpdatePage(item.id)">تعديل</button>
                <button @onclick="()=> GoToDeletePage(item.id)">حذف</button>
            </td>
        </tr>
   }
</table>

@code {
    public List<Tools.models.Yaseer> Yaseere { get; set; } = new();
    protected override async Task OnInitializedAsync()
    {
        var client = new HttpClient();
        var response = await client.GetAsync("https://localhost:7172/Yaseer");
        Yaseere = await response.Content.ReadAsAsync<List<Tools.models.Yaseer>>();
    }
    void GoToNewPage()
    {
        _nav.NavigateTo("NewCustomer");
    }
    void GoToDetailsPage(int id)
    {
        _nav.NavigateTo("CustomerDetails/" + id);
    }
    void GoToDeletePage(int id)
    {
        _nav.NavigateTo("DeleteCustomer/" + id);
    }
    void GoToUpdatePage(int id)
    {
        _nav.NavigateTo("UpdateCustomer/" + id);
    }
}