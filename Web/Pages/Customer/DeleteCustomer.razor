@page "/DeleteCustomer/{Id}"
@inject NavigationManager _nav
<h3>حذف العميل </h3>
@if(this.Customers != null)
{
    <label>الاسم: @Customers.name</label>
    <br/>
    <label>العمر: @Customers.Age</label>
}
<p>هل انت متاكد من حذف البيانات؟</p>
<button @onclick="this.Delete">حذف</button>
<button @onclick="this.Back">إلغاء</button>

@code {
    public Tools.Model.Customer Customers { get; set; }
    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var client = new HttpClient();
        var response = await client.GetAsync("https://localhost:7250/Customers/" + Id);
        if(response.StatusCode == System.Net.HttpStatusCode.OK)
        {
            this.Customers = await response.Content.ReadAsAsync<Tools.Model.Customer>();
        }
    }
    async Task Delete()
    {
        var client = new HttpClient();
        var response = await client.DeleteAsync("https://localhost:7250/Customers/" + Id);
        if(response.StatusCode == System.Net.HttpStatusCode.NoContent)
        {
            _nav.NavigateTo("customer");
        }
    }
    void Back()
    {
        _nav.NavigateTo("customer");
    }

}
